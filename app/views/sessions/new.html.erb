<div class="background-image">
  <div class="text">
    <div id="login_form">
        <%= form_tag login_path do %>

        <%= label_tag :email %>
        <%= text_field_tag :email %>

        <%= label_tag :password %>
        <%= password_field_tag :password %>

        <%= submit_tag "Log in" %>
      <% end %>
    </div>
  </div>
</div>
