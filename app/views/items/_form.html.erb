  <%= form_for @item do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :donation_amount %>
    <%= f.text_field :donation_amount %>

    <%= f.label :category %>
    <%= f.select :category, ["F&B", "Product", "BOGO"] %>

    <%= f.label :business %>
    <%= f.select :business, @bizs %>

    <%= f.label :organization %>
    <%= f.select :organization, @orgs %>

    <%= f.submit 'Create New Item', :class => 'item-submit' %>
  <% end %>
