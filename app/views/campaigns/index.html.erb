<div class="background-image">
  <div class="main-text">
    <div class="campaigns">
      <div class="show-header">Donor's Choose Campaigns</div>
        <% if @campaigns %>
          <% @campaigns.each do |campaign| %>
            <ul>
              <li class="camp-title"><a><%= link_to "#{campaign.title}", campaign.url %></a></li>
              <li><%= campaign.stamp %></li>
              <li><%= campaign.percent_funded %></li>
              <li class="completed"><%= link_to "Completed", user_passport_path(current_user.id, campaign.stamp) %></li>
            </ul>
         <% end %>
        <% end %>
    </div>
  </div>
</div>
